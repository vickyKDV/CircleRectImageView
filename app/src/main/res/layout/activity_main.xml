<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Circle Image"
                android:textAlignment="center" />

            <com.vickykdv.circlerectimageview.CircleRectImage
                android:id="@+id/circleRectImage5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:border_color="@android:color/holo_orange_light"
                app:border_width="10"
                app:roundAll="500" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rectangle Image"
                android:textAlignment="center" />

            <com.vickykdv.circlerectimageview.CircleRectImage
                android:id="@+id/circleRectImage4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:border_color="@android:color/holo_orange_light"
                app:border_width="10"
                app:roundBottomLeft="50"
                app:roundBottomRight="50"
                app:roundTopLeft="50"
                app:roundTopRight="50" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corner Top left &amp; Corner Bottom Right"
                android:textAlignment="center" />

            <com.vickykdv.circlerectimageview.CircleRectImage
                android:id="@+id/circleRectImage3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:border_color="@android:color/holo_orange_light"
                app:border_width="10"
                app:roundBottomRight="100"
                app:roundTopLeft="100" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corner Top left &amp; Corner Bottom Right"
                android:textAlignment="center" />

            <com.vickykdv.circlerectimageview.CircleRectImage
                android:id="@+id/circleRectImage2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:border_color="@android:color/holo_orange_light"
                app:border_width="10"
                app:roundBottomLeft="100"
                app:roundTopRight="100" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Normal Image &amp; No Border"
                android:textAlignment="center" />

            <com.vickykdv.circlerectimageview.CircleRectImage
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:border_color="@android:color/holo_orange_light"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>